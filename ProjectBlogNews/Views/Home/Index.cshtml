@model IEnumerable<ProjectBlogNews.Models.Article>
@{
    ViewData["Title"] = "News Blog";
}

<div class="text-center">
    <h1 class="display-4">Best NEWS Blog in THA WORLD</h1>
    @foreach (var item in Model)
    {
        <h2><a asp-controller="Articles" asp-action="DetailsView" asp-route-id="@item.Id">@item.Title</a></h2>
        <br />
        <h5>@Html.DisplayFor(modelItem => item.ReleaseDate)</h5>
        <br />
        <h4>@Html.DisplayFor(modelItem => item.Author.LastName)</h4>
        <br />
        <hr />
    }

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @if (Model != null)
            {
                for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                    </li>
                }
            }
        </ul>
    </nav>
</div>
